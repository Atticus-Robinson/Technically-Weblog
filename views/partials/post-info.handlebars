<article class="post">
  <div class="title">

    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    <span></span>
    <a href="{{post_url}}" style="color:green !important;">({{format_url post_url}})</a>
  </div>
  <div class="meta">
    Posted by
    {{user.username}}
    on
    {{format_date created_at}}
    ||
    <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>